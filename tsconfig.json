{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist/scripts",
        "baseUrl": ".",
        "lib": [ "dom", "es2015" ],
        "jsx": "react",
        "paths": {
            "@shared/*": [
                "./src/shared/*"
            ],
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}